<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView.ToolBar" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MaterialDivider.Line" parent="Widget.MaterialComponents.MaterialDivider">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="dividerColor">@color/md_grey_300</item>
    </style>

    <style name="TextView.Title" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22dp</item>
        <item name="android:lines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextView.Date" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="strokeColor">@color/md_grey_300</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/md_green_900</item>
        <item name="android:textSize">14dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">4dp</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>
</resources>